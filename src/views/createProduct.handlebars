<h1>Subir Producto</h1>
<form id="productForm">
  <label
    for="title"
    style="display: block; margin-top: 10px; font-weight: bold;"
  >Título:</label>
  <input
    type="text"
    id="title"
    name="title"
    required
    style="width: 100%; padding: 8px; margin-top: 5px; box-sizing: border-box;"
  />

  <label
    for="description"
    style="display: block; margin-top: 10px; font-weight: bold;"
  >Descripción:</label>
  <textarea
    id="description"
    name="description"
    required
    style="width: 100%; padding: 8px; margin-top: 5px; box-sizing: border-box;"
  ></textarea>

  <label
    for="code"
    style="display: block; margin-top: 10px; font-weight: bold;"
  >Código:</label>
  <input
    type="text"
    id="code"
    name="code"
    required
    style="width: 100%; padding: 8px; margin-top: 5px; box-sizing: border-box;"
  />

  <label
    for="price"
    style="display: block; margin-top: 10px; font-weight: bold;"
  >Precio:</label>
  <input
    type="number"
    id="price"
    name="price"
    required
    style="width: 100%; padding: 8px; margin-top: 5px; box-sizing: border-box;"
  />

  <label
    for="stock"
    style="display: block; margin-top: 10px; font-weight: bold;"
  >Stock:</label>
  <input
    type="number"
    id="stock"
    name="stock"
    required
    style="width: 100%; padding: 8px; margin-top: 5px; box-sizing: border-box;"
  />

  <label
    for="category"
    style="display: block; margin-top: 10px; font-weight: bold;"
  >Categoría:</label>
  <input
    type="text"
    id="category"
    name="category"
    required
    style="width: 100%; padding: 8px; margin-top: 5px; box-sizing: border-box;"
  />

  <label
    for="images"
    style="display: block; margin-top: 10px; font-weight: bold;"
  >Imágenes:</label>
  <input
    type="file"
    id="thumbnails"
    name="thumbnails"
    multiple
    required
    style="width: 100%; padding: 8px; margin-top: 5px; box-sizing: border-box;"
  />

  <button
    type="submit"
    style="margin-top: 20px; padding: 10px 15px; background-color: #4CAF50; color: white; border: none; cursor: pointer;"
  >Subir Producto</button>
</form>

<div id="error-message" style="color: red; margin-top: 20px;"></div>
<div id="success-message" style="color: green; margin-top: 20px;"></div>

<script src="/js/createProduct.js"></script>